{
  "name": "kt-application",
  "author": "cvogit",
  "version": "0.1.0",
  "description": "A practive application built with Electron and React.",
  "private": true,
  "dependencies": {
    "animated": "^0.2.1",
    "animejs": "^2.2.0",
    "axios": "^0.16.2",
    "bootstrap": "^4.0.0",
    "electron-is-dev": "^0.3.0",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "react-scripts": "1.0.10",
    "react-toolbox": "^2.0.0-beta.12",
    "react-transition-group": "^2.2.1"
  },
  "homepage": "./",
  "main": "public/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --em.main=build/main.js",
    "electron-pack-win": "build --em.main=build/main.js --win",
    "electron-pack-mac": "build --em.main=build/main.js --mac",
    "preelectron-pack": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "toolbox": "react-toolbox-themr"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^1.8.1",
    "electron-builder": "^19.53.7",
    "electron-packager": "^8.7.2",
    "react-toolbox-themr": "^1.0.2",
    "wait-on": "^2.1.0"
  },
  "build": {
    "appId": "com.electron.p1.app",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "reactToolbox": {
    "include": [
      "AVATAR",
      "BUTTON",
      "DATE_PICKER",
      "LINK",
      "NAVIGATION",
      "TABS"
    ],
    "customProperties": {
      "animation-duration": "0.3s",
      "color-accent": "var(--palette-blue-a200)",
      "color-accent-dark": "var(--palette-blue-700)",
      "color-primary-contrast": "var(--color-dark-contrast)",
      "color-accent-contrast": "var(--color-dark-contrast)"
    },
    "output": "assets/react-toolbox"
  }
}
